{
    "version": 0,
    "common": [
        {
            "action": "keyboard_toggle",
            "events": [
                {
                    "scancode": "D",
                    "control": true                    
                }
            ]
        },
        {
            "action": "toggle_paused",
            "events": [
                {
                    "scancode": "Escape"
                }
            ]
        },
        {
            "action": "reload_scene",
            "events": [
                {
                    "scancode": "R"
                }
            ]
        },
        {
            "action": "reload_all",
            "events": [
                {
                    "scancode": "R",
                    "control": true,
                    "alt": true
                }
            ]
        },
        {
            "action": "toggle_full_screen",
            "events": [
                {
                    "scancode": "F",
                    "alt": true
                }
            ]
        },
        {
            "action": "move_left",
            "events": [
                {
                    "scancode": "A"
                },
                {
                    "scancode": "Left"
                },
                {
                    "axis": "Left Stick X",
                    "axis_value": -1
                }
            ]
        },
        {
            "action": "move_right",
            "events": [
                {
                    "scancode": "D",
                    "control": false   
                },
                {
                    "scancode": "Right",
                    "control": false
                },
                {
                    "axis": "Left Stick X",
                    "axis_value": 1
                }
            ]
        },
        {
            "action": "jump",
            "events": [
                {
                    "scancode": "W"
                },
                {
                    "scancode": "Up"
                },
                {                    
                    "button_index": 0,
                    "is_joypad" : true
                }
            ]
        },
        {
            "action": "move_down",
            "events": [
                {
                    "scancode": "S"
                },
                {
                    "scancode": "Down"
                },
                {
                    "axis": "Left Stick Y",
                    "axis_value": 1
                }
            ]
        }
    ]
}

