{
    "version": 0,
    "common": [
        {
            "action": "toggle_paused",
            "events": [
                {
                    "scancode": "Escape"
                }
            ]
        },
        {
            "action": "reload_scene",
            "events": [
                {
                    "scancode": "R"
                }
            ]
        },
        {
            "action": "reload_all",
            "events": [
                {
                    "scancode": "R",
                    "control": true,
                    "alt": true
                }
            ]
        },
        {
            "action": "toggle_editor_mode",
            "events": [
                {
                    "scancode": "E",
                    "control": true,
                    "alt": true
                }
            ]
        },
        {
            "action": "toggle_full_screen",
            "events": [
                {
                    "scancode": "F",
                    "alt": true
                }
            ]
        },
        {
            "action": "move_left",
            "events": [
                {
                    "scancode": "A"
                },
                {
                    "scancode": "Left"
                },
                {
                    "axis": "Left Stick X",
                    "axis_value": -1
                }
            ]
        },
        {
            "action": "move_right",
            "events": [
                {
                    "scancode": "D"
                },
                {
                    "scancode": "Right"
                },
                {
                    "axis": "Left Stick X",
                    "axis_value": 1
                }
            ]
        },
        {
            "action": "move_up",
            "events": [
                {
                    "scancode": "W"
                },
                {
                    "scancode": "Up"
                },
                {
                    "axis": "Left Stick Y",
                    "axis_value": -1
                }
            ]
        },
        {
            "action": "move_down",
            "events": [
                {
                    "scancode": "S"
                },
                {
                    "scancode": "Down"
                },
                {
                    "axis": "Left Stick Y",
                    "axis_value": 1
                }
            ]
        }
    ],
    "editor": [
        {
            "action": "zoom_camera_in",
            "events": [
                {
                    "scancode": "O"
                }
            ]
        },
        {
            "action": "zoom_camera_out",
            "events": [
                {
                    "scancode": "P"
                }
            ]
        }
    ],
